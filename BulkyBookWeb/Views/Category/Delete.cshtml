
@model Category


@{
    ViewData["Title"] = "Edit";
}


<form method="post" asp-action="DeleteCategory" >
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pd-2">
            <h2 class="text-primary">
                Delete Category
            </h2>
            <hr />
        </div>
        <div asp-validation-summary="All" class="text-danger">

        </div>
   
        <div class="mb-3">
            <label asp-for="Name">
                Name
            </label>
            <input asp-for="Name" type="text" class="form-control" disabled />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder">
            </label>
            <input asp-for="DisplayOrder" type="text" class="form-control" disabled />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>

        </div>
        <button type="submit" class="btn btn-danger" style="width:150px">
            Delete
        </button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back To List
        </a>
    </div>

</form>


@section Scripts{

            <partial name="_ValidationScriptsPartial" />
}
